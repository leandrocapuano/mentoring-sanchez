			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var body = JSON.parse(responseBody);",
							"postman.setEnvironmentVariable(\"CARD_ID\", body.id);",
							"",
							"function generateLuhnValidCardNumber(length) {",
							"    let cardNumber = \"\";",
							"    // Generate random digits for the base number (length - 1)",
							"    for (let i = 0; i < length - 1; i++) {",
							"        cardNumber += Math.floor(Math.random() * 10);",
							"    }",
							"",
							"    // Calculate Luhn checksum",
							"    let sum = 0;",
							"    let double = false;",
							"    for (let i = cardNumber.length - 1; i >= 0; i--) {",
							"        let digit = parseInt(cardNumber.charAt(i), 10);",
							"        if (double) {",
							"            digit *= 2;",
							"            if (digit > 9) {",
							"                digit -= 9;",
							"            }",
							"        }",
							"        sum += digit;",
							"        double = !double;",
							"    }",
							"    let checkDigit = (sum * 9) % 10;",
							"    cardNumber += checkDigit;",
							"    return cardNumber;",
							"}",
							"",
							"// Generate a 16-digit Luhn-valid card number",
							"const newCardNumber = generateLuhnValidCardNumber(16);",
							"pm.environment.set(\"generatedCardNumber\", newCardNumber); // Or pm.collectionVariables.set"
						],
						"type": "text/javascript",
						"packages": {}
					}
				}
			],
